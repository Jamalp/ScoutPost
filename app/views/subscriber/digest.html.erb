<div class= "wrapper">

  <!-- Begin Post -->
  <% @post.each do |post| %>
  <div class="post">
    <p id="title"><%= post.title %></p>
    <div id="post_content"><%= %></div>
    <div id="post_data">
      <p id="data"> <%= post.comments_count %> |Comments | @post.time   </p>
      <!-- <p id="data"> <%= @post.all[1].comments_count %> |Comments | @post.time   </p> -->
    </div>
  </div>
  <% end %>
  <!-- End Post -->
</div>
